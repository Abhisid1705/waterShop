<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uhost</title>
    <link rel="shortcut icon" href="favicon.jpg">
    <link rel="stylesheet" href="../shared.css">
    <link rel="stylesheet" href="main.css">
    <script src="../shared.js" defer></script>
</head>
<body>
    <header class="main-header">
            <button class="toggle-button">
                <span class="toggle-button__line"></span>
                <span class="toggle-button__line"></span>
                <span class="toggle-button__line"></span>
            </button>
        <div class="mobile-nav">
            <nav class="mobile-nav__items">
                <a href="http://127.0.0.1:5500/main/index.html" class="mobile-nav__item">Login</a>
                <a href="#" class="mobile-nav__item">SignUp</a>
                <a href="#" class="mobile-nav__item">Admin</a>
                <button class="mobile-nav__subscription"> <a href="../plan/index.html">Our Plans</a> </button>
            </nav>
        </div>
        <a href="index.html" class="logo">
            <img src="../images/logoCompany.png" alt="WaterDrop" class="company-logo">
        </a>
        <nav class="main-nav">
            <!-- <a href="http://127.0.0.1:5500/main/index.html" class="main-nav__item">Login</a>
            <a href="#" class="main-nav__item">SignUp</a>
            <a href="#" class="main-nav__item">Admin</a> -->
            <form action="http://localhost:5500/admin/logout" method="POST">
                <button type="submit">Logout</button>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          </form>
            <button class="main-nav__subscription"> <a href="../plan/index.html">Our Plans</a> </button>
        </nav>
    </header>
    <main>
    <% if(products.length > 0){ %>
        <div class="product-container">
            <% for (let product of products) { %>
                <article class="product">
                    <header class="about-product">
                         <h1 class="product-title">
                             <%= product.title %>
                         </h1>
                         </header>>
                         <div class="product-image">
                            <img src="/<%= product.imageUrl %>"
                                alt="<%= product.title %>">
                        </div>
                        <div class="product__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/products/<%= product._id %>" class="btn">Details</a>

                            <form action="/admin/edit-product">
                                <% if (editing) { %>
                                    <input type="hidden" value="<%= product._id %>" name="productId">
                                    <% } %>

                            <button type="submit">Edit</button>
                            </form>
                            <!-- <a href="/admin/edit-product">Edit Product</a> -->
                            <a href="/admin/delete-product">Delete Product</a>
                        </div>
                </article>
                <% } %>
                <% } else { %>
                    <h1>No Products Found!</h1>
                <% } %>
        </div>
    </main>
</body>
</html>